@model Film_detail.Models.FILM_detail
@{
    ViewData["Title"] = "Chi Tiết Phim";
}

<div class="container_header">
    <div class="feature">
        <div class="feature__bg">
            <div class="feature__bg--video video-onl">
                <iframe id="movieVideo2" width="100%" height="100%" src="@Model.Video" allow="autoplay" title="@Model.Title"></iframe>
            </div>
        </div>

        <div class="container">
            <div class="row align-items-center feature-content">
                <div class="col-lg-7 col-md-12">
                    <div class="movie-info">
                        <span class="movie-age" id="movieAge" data-age="@Model.Age">@Model.Age</span>
                        <h1 class="movie-title" id="movieTitle">@Model.Title</h1>
                        <p class="movie-meta" id="movieMeta">
                            <span class="movie-meta-item">@Model.Released</span>
                            <span class="movie-meta-separator">|</span>
                            <span class="movie-meta-item">@Model.Runtime</span>
                            <span class="movie-meta-separator">|</span>
                            <span class="movie-meta-item">@Model.Country</span>
                            <span class="movie-meta-separator">|</span>
                            <span class="movie-meta-item">@Model.Genre</span>
                        </p>
                        <p class="movie-desc" id="movieDecs">@Model.Description</p>

                        <div class="row align-items-center">
                            <div class="col-12 col-sm-3 col-lg-3 col-xxl-2">
                                @if (!string.IsNullOrEmpty(Model.Booking))
                                {
                                    <a href="@Model.Booking" class="btn btn-danger buy-btn" id="Booking">Mua vé</a>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row d-flex justify-content-center">
    <div class="col-11 col-sm-5 col-lg-4">
        <div class="info-wrap">
            <h5 class="movie-content">Nội dung</h5>
            <p class="movie-plot-short" id="moviePlotShort">@Model.Plot</p>
            <p class="movie-plot-full" id="moviePlotFull" style="display:none">@Model.Plot</p>
            <span class="toggle-text" id="toggleText">Xem thêm</span>
        </div>
    </div>

    <div class="col-11 col-sm-6 ">
        <div class="info-wrap">
            <div class="row">
                <div class="col-12">
                    <h5 class="movie-content">Thông tin</h5>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="info-item">
                        <h5>Đạo diễn</h5>
                        <p id="director">@Model.Director</p>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="info-item">
                        <h5>Diễn viên</h5>
                        <p id="actors">@Model.Actors</p>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="info-item item-last">
                        <h5>Ngôn ngữ</h5>
                        <p id="language">@Model.Language</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
