<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Movie</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

    <!-- CSS riêng -->
    <link rel="stylesheet" href="~/css/film.css" />
</head>
<body>

    <!-- 🧭 HEADER -->
    <div class="container-header">
        <header class="header" id="header">
            <div class="logo">
                <h1>movie</h1>
            </div>
            <nav class="navBar">
                <div class="open-btn" id="open">
                    <i class="fa-solid fa-bars"></i>
                </div>
                <div class="nav-items">
                    <ul class="list">
                        <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                        <li><a href="@Url.Action("Index", "Film")" class="active">Phim</a></li>
                        <li><a href="@Url.Action("UuDai", "Home")">Ưu Đãi</a></li>
                        <li><a href="@Url.Action("Contact", "Home")">Liên Hệ</a></li>
                    </ul>

                    <!-- Di chuyển nút close ra ngoài ul -->
                    <div class="close-btn" id="close">
                        <i class="fa-solid fa-xmark"></i>
                    </div>

                    <ul class="user">
                        <li>
                            <div class="search_user">
                                <input type="text" placeholder="Search..." id="search_input" />
                                <div class="search"></div>
                            </div>
                        </li>
                        <li>
                            <a href="@Url.Action("Login", "Account")">
                                <i class="fa-solid fa-user" id="user_icon"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
    </div>

    <!-- 🔹 PHẦN THÂN TRANG -->
    <main class="pt-5 mt-5">
        @RenderBody()
    </main>

    <!-- 🦶 FOOTER -->
    <footer class="footer">
        <div class="footer-advise">
            <div>
                <ul>
                    <li><a href="@Url.Action("Contact", "Home")#gioithieu">Giới Thiệu</a></li>
                    <li><a href="@Url.Action("Contact", "Home")#lienhe">Liên Hệ</a></li>
                    <li><a href="@Url.Action("Contact", "Home")#chinhsach">Chính Sách</a></li>
                    <li><a href="@Url.Action("Contact", "Home")#huongdan">Hướng Dẫn</a></li>
                </ul>
            </div>
            <div class="advise-text">
                <p><small>Địa chỉ trụ sở: 3 Đ. Cầu Giấy, Ngọc Khánh, Đống Đa, Hà Nội, Việt Nam</small></p>
                <p><small>Giấy chứng nhận ĐKKD số: 0106633482 - Đăng ký lần đầu ngày 08/09/2014 tại Sở KH&ĐT TP Hà Nội</small></p>
            </div>
        </div>

        <div>
            <h4>Follow Us</h4>
            <div class="footer-social">
                <a href="https://www.instagram.com/sqw_uli" target="_blank">
                    <i class="fa-brands fa-instagram"></i>
                </a>
                <a href="https://www.facebook.com/Siluq.16" target="_blank">
                    <i class="fa-brands fa-facebook-f"></i>
                </a>
                <a href="https://www.threads.net/sqw_uli" target="_blank">
                    <i class="fa-brands fa-threads"></i>
                </a>
            </div>
        </div>

        <div class="moblie-app">
            <h4>Movie App</h4>
            <div class="link-title">
                <a href="https://play.google.com/store/apps/details?id=com.cgv.android.movieapp" target="_blank">
                    <img src="~/images/footer/01.jpg" alt="Google Play" />
                </a>
                <a href="https://apps.apple.com/vn/app/cgv-cinemas/id1067166194" target="_blank">
                    <img src="~/images/footer/02.jpg" alt="App Store" />
                </a>
            </div>
        </div>
    </footer>

    <!-- ✅ JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/film.js"></script>
</body>
</html>
